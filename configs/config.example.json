{
    "log": {
        "log_level": "info",
        "json": false
    },
    "db": {
        "dir": "/path/to/badger"
    },
    "router": {
        "flow": {
            "action": "sequence",
            "subflow": []
        }
    },
    "ingress": {
        "method": "syslog",
        "syslog": {
            "transport": "udp",
            "listen_addr": "0.0.0.0:8514"
        },
        "tail": {
            "path": "/path/to/nyaago.log",
            "poll": false
        },
        "format": "nginxjson"
    },
    "ip_list": {
        "entry_ttl": "30m",
        "export_prefix_length": {
            "ipv4": 24,
            "ipv6": 64
        }
    },
    "egress": {
        "interval": "5m",
        "path": "/path/to/nyaago_limit.conf",
        "format": "nginx",
        "post_exec": [
            {
                "tag": "nginx-reload",
                "cmd": "docker",
                "args": [
                    "exec",
                    "service-nginx",
                    "nginx",
                    "-s",
                    "reload"
                ]
            }
        ]
    },
    "api": {
        "listen_addr": "0.0.0.0:8580"
    }
}